<?xml version="1.0" encoding="UTF-8"?>
<Context path="/Maz_inventory">
<Resource
        name="jdbc/maz-inventorydb"
        url="jdbc:mysql://localhost:3308/maz-inventorydb" 
        username="root"
        password="password"
        maxActive="100"
